{
    "compilerOptions": {
      "outDir": "./src/render/dist",

      "alwaysStrict": true,
      "strictNullChecks": true,
      "strictBindCallApply": true,
      "strictFunctionTypes": true,
      "strictPropertyInitialization": true,
      "noImplicitAny": true,
      "noImplicitThis": true,
      "useUnknownInCatchVariables": true,

      "module": "commonJS",
      "target": "es5",
      "jsx": "react",
      "allowJs": true,
      "moduleResolution": "node"
    },
    "exclude": [
      "/node_modules/"
    ]
}